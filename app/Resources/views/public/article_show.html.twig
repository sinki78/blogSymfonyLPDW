{% extends 'base.html.twig' %}

{% block body %}
    <h1>Article</h1>

    <<table class="table table-bordered">
    <thead>
    <tr>
        <th>Name</th>
        <th>Content</th>
        <th>ReleaseDate</th>
        <th>Category</th>
        <th>tag</th>
        <th>Author</th>
    </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ article.name }}</td>
            <td>{{ article.content }}</td>
            <td>{{ article.releaseDate|date("m/d/Y") }}</td>
            <td>{{ article.category.name }}</td>
            <td>
                {% for tag in article.tags %}
                    {{ tag.name }}

                {% endfor %}</td>
            <td>{{ article.user }} author</td>

        </tr>
    </tbody>
</table>

    <ul>
        <li>
            <a href="{{ path('public_liste_articles') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
