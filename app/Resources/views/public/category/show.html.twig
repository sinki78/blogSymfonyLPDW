{% extends 'base.html.twig' %}

{% block body %}
    <h1>Category</h1>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Contenu</th>
            <th>Date publication</th>
            <th>Categorie</th>
            <th>Tag</th>
            <th>Auteur</th>
            <th>NbCommentaire</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.name }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.releaseDate|date("m/d/Y") }}</td>
                <td>{{ article.category.name }}</td>
                <td>
                    {% for tag in article.tags %}
                        {{ tag.name }}

                    {% endfor %}</td>
                <td>{{ article.user.username }} author</td>
                <th>{{ get_nb_commentaries(article) }}</th>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('public_liste_category') }}"><button class="btn btn-default">Retourner a la liste</button></a>

{% endblock %}
