{% extends 'base.html.twig' %}

{% block body %}
    <h1>Commentary</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentary.id }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ commentary.author }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ commentary.content }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if commentary.date %}{{ commentary.date|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('commentary_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('commentary_edit', { 'id': commentary.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
